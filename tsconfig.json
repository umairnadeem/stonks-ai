{
  "compilerOptions": {
    "target": "es6",
    "watch": true,
    "module": "commonjs",
    "esModuleInterop": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "dist/server",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/", "src/types/*"]
    }
  },
  "jsx": "react",
  "include": ["./src/**/*"],
  "exclude": ["./src/public/"]
}